<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    tools:context="com.natimeital.friendist.SearchUser">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/search_ET_SearchUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:hint="@string/searchUsers_hint_searchbar"
            android:drawableRight="@drawable/searchicon"/>

        <ImageButton
            android:id="@+id/back_BTN_SearchUser"
            android:baselineAlignBottom="true"
            android:layout_width="match_parent"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/cancel" />
    </LinearLayout>
    <ListView
        android:id="@+id/users_LV_SearchUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>

</LinearLayout>
