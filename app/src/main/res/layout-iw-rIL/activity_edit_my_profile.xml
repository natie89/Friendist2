<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/cancelEdit_BTN_profileEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/cancel" />

        <TextView
            android:id="@+id/title_profileEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/profile_editor_title"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/description_profileEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_profileEditor"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/profile_editor_description"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/firstlastnameLL_profileEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_profileEditor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/firstName_profileEditor"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_profileEditor"
                android:singleLine="true"
                android:hint="@string/first_name_hint" />

            <EditText
                android:id="@+id/lastName_profileEditor"
                android:layout_width="150dp"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_profileEditor"
                android:hint="@string/last_name_hint" />
        </LinearLayout>

        <TextView
            android:id="@+id/yourphoto_TV_profileEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstlastnameLL_profileEditor"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/your_photo_title_editprofile"

            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/uploadphoto_profileEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/yourphoto_TV_profileEditor"
            android:layout_centerHorizontal="true"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/upload" />

        <ImageView
            android:id="@+id/photo_profileEditor"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/uploadphoto_profileEditor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/profilephoto" />

