<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/menu_BTN_UserProfile_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/menu"
            android:clickable="true"
            android:background="?android:selectableItemBackground"/>
        <TextView
            android:id="@+id/myusername_TV_UserProfile_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="50sp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:id="@+id/myfirstnamelastname_LL_UserProfile_page"
            android:layout_width="wrap_content"
            android:layout_below="@id/myusername_TV_UserProfile_page"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/myfirstname_TV_UserProfile_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="first"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     "/>
            <TextView
                android:id="@+id/mylastname_TV_UserProfile_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="last"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/personaldetails_LL_UserProfile_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_below="@id/myfirstnamelastname_LL_UserProfile_page">

            <TextView
                android:id="@+id/myage_TV_UserProfile_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="age"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/mysex_TV_UserProfile_page"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="sex"/>
            <TextView
                android:id="@+id/distancebetween_TV_UserProfile_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:text="distance"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/messageUser_BTN_UserProfile_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message"
            android:layout_toLeftOf="@id/myfirstnamelastname_LL_UserProfile_page"
            android:layout_below="@id/myfirstnamelastname_LL_UserProfile_page"
            android:clickable="true"
            android:background="?android:selectableItemBackground"/>
        <ImageButton
            android:id="@+id/addUser_BTN_UserProfile_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/adduser"
            android:layout_toLeftOf="@id/myfirstnamelastname_LL_UserProfile_page"
            android:layout_below="@id/messageUser_BTN_UserProfile_page"
            android:clickable="true"
            android:background="?android:selectableItemBackground"/>
        <ImageButton
            android:id="@+id/removeUser_BTN_UserProfile_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/removeuser"
            android:layout_toLeftOf="@id/myfirstnamelastname_LL_UserProfile_page"
            android:layout_below="@id/messageUser_BTN_UserProfile_page"
            android:clickable="true"
            android:background="?android:selectableItemBackground"/>

        <ImageView
            android:id="@+id/myphoto_IV_UserProfile_page"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/personaldetails_LL_UserProfile_page"
            android:layout_marginTop="32dp"
            android:src="@drawable/profilephoto"/>
        <TextView
            android:id="@+id/myinterests_TV_UserProfile_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interests_myUserProfile"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/myphoto_IV_UserProfile_page"
            android:textSize="30sp"
            />
        <ListView
            android:id="@+id/mycategories_LV_UserProfile_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/myinterests_TV_UserProfile_page"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            ></ListView>

    </RelativeLayout>
</ScrollView>