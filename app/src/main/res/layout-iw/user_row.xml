<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/userphoto_IV_LV_SearchUser"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/profilephoto"/>
    <TextView
        android:id="@+id/username_TV_LV_SearchUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="25dp"
        android:layout_toRightOf="@id/userphoto_IV_LV_SearchUser"
        android:layout_marginLeft="8dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/userphoto_IV_LV_SearchUser"
        android:layout_below="@id/username_TV_LV_SearchUser"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/firstname_TV_LV_SearchUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="FirstName"/>
        <TextView
            android:id="@+id/lastname_TV_LV_SearchUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="18dp"
        android:text="LastName"/>
    </LinearLayout>

</RelativeLayout>